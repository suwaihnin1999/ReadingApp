<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageShowActivity">

    <ImageView
        android:id="@+id/imageShow_img"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginTop="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/imageShow_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/green"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="@+id/imageShow_img"
        app:layout_constraintTop_toBottomOf="@+id/imageShow_img" />

    <Button
        android:id="@+id/imageShow_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/orange"
        android:text="Change"
        app:layout_constraintEnd_toEndOf="@+id/imageShow_img"
        app:layout_constraintStart_toEndOf="@+id/imageShow_cancel"
        app:layout_constraintTop_toTopOf="@+id/imageShow_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>