<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="chipText" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="fontFamily">@font/playfairdisplay_italic</item>
        <item name="android:textSize">13sp</item>

    </style>
    <style name="chipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
        <item name="chipCornerRadius">11dp</item>
        <item name="chipMinHeight">30dp</item>
        <item name="paddingStart">20dp</item>
    </style>
    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    //todo bottomNav style
    <style name="BottomNav" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/orange</item>
    </style>

    <style name="AlertDialog_custom" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="menu_style" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/playfairdisplay_bold</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>